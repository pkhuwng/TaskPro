<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <!-- Left section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monthYearTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="jan, Year"
                android:textSize="15sp"
                android:textColor="@color/muted_black"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/dateTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="25"
                android:textSize="30sp"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/timeTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/gray_faded"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider12"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="4dp"
            android:background="@color/gray_faded" />

        <!-- Right section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"> <!-- Căn chỉnh sang bên phải -->

                <TextView
                    android:id="@+id/titleTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="20sp"
                    android:textColor="@color/muted_black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/editImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/task_edit"
                    app:tint="@color/purple" /> <!-- Khoảng cách giữa icon Edit và Delete -->

                <ImageView
                    android:id="@+id/deleteImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/task_delete"
                    app:tint="@color/purple"
                    android:layout_marginStart="0dp" /> <!-- Không có khoảng cách -->

            </LinearLayout>

            <TextView
                android:id="@+id/contentTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Content here"
                android:textSize="12sp"
                android:textColor="@color/gray_faded"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>